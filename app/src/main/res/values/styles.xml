<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="MainMatch.White">
        <item name="android:background">#ffffff</item>
    </style>
    <style name="MainMatch.Black">
        <item name="android:background">#000000</item>
    </style>
    <style name="MainMatch.Vertical">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="MainMatch.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MainWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MainWrap.White">
        <item name="android:background">#ffffff</item>
    </style>
    <style name="MainWrap.Black">
        <item name="android:background">#000000</item>
    </style>
    <style name="MainWrap.Vertical">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="MainWrap.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MainText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MainBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="open">left</item>
        <item name="parentDrawer">@+id/rootDrawer</item>
    </style>

    <style name="BtnText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">start|center</item>
    </style>
    <style name="BtnText.Fixed">
        <item name="android:layout_width">90dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="MenuMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">220dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="MenuIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MenuTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="FixedBtn">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/fixed_btn_select</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="UserMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="UserMenuItemIcon">
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">18dp</item>
    </style>
    <style name="UserMenuItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="UserInfoBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/radius_border</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="UserInfoItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="UserInfoBorder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:background">#eeeeee</item>
    </style>
    <style name="UserInfoItemIcon">
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>
    <style name="UserInfoItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#555555</item>
    </style>

    <style name="UserHomeInfoItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="UserHomeInfoItemBorder">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#66363741</item>
    </style>
    <style name="UserHomeInfoItemName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#80ffffff</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="UserHomeInfoItemNum">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">#E6FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="UserHomeInfoTags">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:background">@drawable/radius_tags</item>
        <item name="android:textColor">#80ffffff</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="UserHomeTabMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">#F6CF1C</item>
        <item name="tabTextColor">#CCFFFFFF</item>
        <item name="tabSelectedTextColor">#ffffff</item>
        <item name="tabTextAppearance">@style/UserHomeTabMainStyle</item>
    </style>
    <style name="UserHomeTabMainStyle">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="UserHomeTabItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="UserHomeTabText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="UserHomeSetItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/radius_white</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
