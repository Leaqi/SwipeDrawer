        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="UserHomeSetItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#777777</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="TabBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TabMainTextStyle">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TabMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="tabMinWidth">80dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabMode">auto</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorColor">#ffffff</item>
        <item name="tabTextColor">#CCFFFFFF</item>
        <item name="tabSelectedTextColor">#ffffff</item>
        <item name="tabTextAppearance">@style/TabMainTextStyle</item>
    </style>
    <style name="TabItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TabText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#CCFFFFFF</item>
        <item name="android:textSize">21sp</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowDx">-2</item>
        <item name="android:shadowDy">2</item>
    </style>


    <style name="CloseTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="CloseText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="CloseText.White">
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="CloseMid">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
